{
  "name": "@pooltogether/utilities",
  "version": "0.6.1",
  "description": "Shared utility functions across PoolTogether apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:pooltogether/pooltogether-utilities.git",
  "author": "PoolTogether Inc.",
  "license": "MIT",
  "module": "dist/utilities.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch --onSuccess \"yalc push\"",
    "build": "tsdx build",
    "reinstall": "rm -rf node_modules && yarn install",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {},
  "peerDependencies": {
    "ethers": "^5.4.6"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@types/node": "^15.0.2",
    "ethers": "^5.4.6",
    "husky": "^7.0.4",
    "size-limit": "^7.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint:fix"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "path": "dist/utilities.cjs.production.min.js",
      "limit": "111 KB"
    },
    {
      "path": "dist/utilities.esm.js",
      "limit": "72 KB"
    }
  ]
}
